<?xml version="1.0" encoding="UTF-8"?>
<Context path="/MagmaDoctor" reloadable="true">
    <Resource 
        auth="Container" 
        driverClassName="org.postgresql.Driver" 
        maxActive="15" 
        maxIdle="30"
        maxWait="10000" 
        name="jdbc/MagmaDoctorDB" 
        password="postgres" 
        type="javax.sql.DataSource"
        url="jdbc:postgresql://localhost:5432/MagmaDoctor?autoReconnect=true" 
        username="postgres">
    </Resource>
</Context>

